<% content_for :title, "Resend confirmation instructions - AWS Scheduler" %>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'well' }) do |f| %>

<label><h6>Resend confirmation instructions</h6></label>
  <div><%= f.email_field :email, :placeholder => 'Enter your e-mail' %></div>
  <div><%= f.submit "Resend confirmation instructions", :class => 'btn btn-success' %></div>
<% end %>


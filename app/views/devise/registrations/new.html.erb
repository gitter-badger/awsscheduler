<% content_for :title, "Sign up to free account - AWS Scheduler" %>

<center>
    <h1 style='margin-bottom: 15px;'>Sign up and take control of your Amazon infrastructure</h1>
</center>
<div class="row">
    <div class="span6 offset3">
        <%= devise_error_messages! %>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal well'}) do |f| %>
        <fieldset>
            <legend>Free account. No obligation, no credit card required.</legend>
            <div class="control-group"><%= f.label :email, :class => 'control-label' %>
                <div class="controls">
                    <%= f.email_field :email %>
                    <p class="help-block">Your e-mail will <u>never</u> be shared with anyone and we do not spam.</p>
                </div>
            </div>
            <div class="control-group"><%= f.label :password, :class => 'control-label' %>
                <div class="controls">
                    <%= f.password_field :password %>
                </div>
            </div>
            <div class="control-group"><%= f.label :password_confirmation, :class => 'control-label' %>
                <div class="controls">
                    <%= f.password_field :password_confirmation %>
                </div>
            </div>
        </fieldset>
        <div class="control-group">
            <div class="controls"><%= f.submit "Get started", :class => 'btn btn-success' %></div>
        </div>
        Already have an account? <%= link_to "Sign in", new_account_session_path %> now.
        <% end %>
    </div>
</div>
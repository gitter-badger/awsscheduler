<% content_for :title, "Forgot your password? - AWS Scheduler" %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'well' }) do |f| %>
<label><h6>Forgot your password?</h6></label>
<div><%= f.email_field :email, :placeholder => 'Enter your e-mail' %></div>
<div><%= f.submit "Send me reset password instructions", :class => 'btn btn-success' %></div>
<% end %>
<%= render "devise/shared/links" %>